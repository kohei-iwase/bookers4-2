<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <!--name表示の追加-->
  <div class="field">
    <%= f.input :name, autofocus: true, class: "name" %>
  </div>
  <!--name表示の追加-->
<br>
  <div class="field">
    <%= f.input :email, autofocus: true, class: "email" %>
  </div>

<br>
  <%= f.input :postcode %>
<br>
  <%= f.input :prefecture_code, collection: JpPrefecture::Prefecture.all, :value_method => :name, include_blank: '都道府県' %>
<br>
  <%= f.input :address_city %>
<br>
  <%= f.input :address_street %>
<br>
  <%= f.input :address_building %>
  
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
  </div>
<!--パスワード確認入力フォーム-->
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
