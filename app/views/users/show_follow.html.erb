<div class="container">
<div class="row">
<div class="col-xs-3">
<h2>User info</h2>
<%= render 'users/profile', user: @user %>
<!--同コントローラーのviewで表示ならusersは省略可 -->
<h2>New book</h2>
<%= render 'books/newform', book: @book %>
</div>
<div class="col-xs-9">
<!--users一覧 -->
<h2><%= @user.name %>'s <%= @title %></h2>
<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<% if @users.any? %>
	<% @users.each do |user| %>
	<tbody>
		<tr>
			<td><%= link_to attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg"), user %></td>
			<td><%= link_to user.name, user %></td>
			<td><%= render 'layouts/status' %></td>
			<td><b>books:</b> <%= @user.books.count %></td>
			<td><%= render 'users/follow_form' %></td>
			<td><%= link_to "Show", user, class: "btn btn-warning" %></td>
		</tr>
	<% end %>
	</tbody>
</table>
	<% end %>
</div>
</div>
</div>
