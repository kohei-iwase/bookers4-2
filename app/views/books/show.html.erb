
<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'users/profile', user: @book.user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>
	</div>
	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
			<tr>
				<td>
					<%= link_to user_path(@book.user.id) do %>
					<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
					<%= @book.user.name %>
					<% end %>
				</td>
				<td><%= link_to @book.title, @book %></td>
				<td><%= @book.body %></td>
				<td></td>
				<td><%= "#{@book.book_comments.count} コメント"%></td>
				    <% if @book.user == current_user %>
				<td><%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
				<td><%= link_to "Destroy",book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
					<% end %>
				</td>
			</tr>
		</table>
	<!--コメント部分-->
	<ol>
    <% @book.book_comments.each do |book_comment| %>
        <li class="comment">
            <%= link_to book_comment.user.name, user_path(book_comment.user_id) %>
                <span class="comment-meta">
           		     <span class="comment-date"><%= book_comment.created_at.strftime('%Y/%m/%d') %></span>
                </span>
                <div class="comment-entry"><%= book_comment.comment %>
               	<% if book_comment.user == current_user %>
                <%= link_to "削除", book_book_comments_path(@book), method: :delete %>
                </div>
                <% end %>
        </li>
    <% end %>
</ol>
	<!--コメントフォーム-->
     <div class="col-xs-12">
        <%= form_for [@book, @book_comment] do |f| %>
        <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
        <br>
	    <%= f.submit "コメント", class: "btn btn-primary" %>
		<% end %>
	  </div>
	</div>
</div>

