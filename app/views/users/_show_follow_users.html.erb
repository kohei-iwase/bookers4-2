<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<% if users.any? %>
	<% users.each do |user| %>
	<tbody>
		<tr>
			<td><%= link_to attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg"), user %></td>
			<td><%= link_to user.name, user %></td>
			<td><%= render 'layouts/status' %></td>
			<td>
				<b>books:</b> <%= @user.books.count %>
			</td>
			<td>
				<% if user != current_user %>
				<!-- <%= render 'users/follow_form' %> -->
				<% end %>
			</td>
			<td><%= link_to "Show", user, class: "btn btn-warning" %></td>
		</tr>
	</tbody>
	<% end %>
	<% end %>
</table>
