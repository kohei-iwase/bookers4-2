<div class="container">
<div class="row">
<div class="col-xs-3">
<h2>User info</h2>
<%= render 'users/profile', user: @user %>
<!--同コントローラーのviewで表示ならusersは省略可 -->
</div>
<div class="col-xs-9">
<!--users一覧 -->
<h1><%= @user.name %>followers </h1>
<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<% if @users.any? %> 
	<% @users.each do |user| %>
	<tbody>
		<tr>
			<th><%= link_to attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg"), user %></th>
			<th><%= user.name %></th>
			<th><%= render 'layouts/status' %></th>
			<th><b>books:</b> <%= @user.books.count %></th>
			<th><%= render 'users/follow_form' %></th>
		</tr>
	<% end %>
	</tbody>
</table>
	<% end %>
</div>
</div>
</div>
