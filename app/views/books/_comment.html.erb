    <% book_comments.each do |book_comment| %>
        <tr>
            <td>
            <%= link_to user_path(book_comment.user), class: "user_#{book_comment.user.id}" do %>
                <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
                <%= book_comment.user.name %>
            <% end %>
            </td>
            <td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= book_comment.comment %></td>
            <% if book_comment.user == current_user %>
            <td><%= link_to "削除", book_book_comments_path(book_comment), method: :delete,remote: true, class: "btn btn-danger delete" %>
            </td>
            <% end %>
        </tr>
    <% end %>

