<h2>Chat room</h2>

<div id="chats">
	<% @chats.each do |chat| %>
			<span class="chat_<%= chat.id %>">
				<%= render 'chat/chat', chat:chat %>
			</span>
		<% end %>
</div>

<%= form_with model: @chat, data: {remote: true} do |f| %>
  <%= f.text_field :message %>
  <%= f.hidden_field :room_id %>
<% end %>